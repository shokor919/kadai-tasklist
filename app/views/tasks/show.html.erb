<h1>id: <%= @task.id %> のタスク詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th class="col-xs-1">id</th>
    <td class="col-xs-6"><%= @task.id %></td>
  </tr>
  <tr>
    <th class="col-xs-1">ステータス</th>
    <td class="col-xs-6"><%= @task.status %></td>
  </tr>
  <tr>
    <th class="col-xs-1">タスク</th>
    <td class="col-xs-6"><%= @task.content %></td>
  </tr>
</table>

<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>